<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_app"
    android:paddingLeft="@dimen/horizontal_margin_activity"
    android:paddingRight="@dimen/horizontal_margin_activity"
    android:paddingBottom="@dimen/vertical_margin_activity"
    android:paddingTop="@dimen/vertical_margin_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="co.edu.uniquindio.android.electiva.giuq.fragments.ConnectionErrorFragment">

    <TextView
        android:id="@+id/textViewTitleConnectionError"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_size_textview"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="@string/connection_error" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewTitleConnectionError"
        app:srcCompat="@drawable/ic_action_connection_error"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/font_size_button"
        android:layout_marginTop="20dp"
        android:text="@string/restart_application"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
