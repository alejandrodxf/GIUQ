<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_fragments_two"
    android:id="@+id/list_researchers_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.uniquindio.android.electiva.giuq.fragments.ListResearchersFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/buttonBackListByResearchers"
            android:textSize="@dimen/font_size_button"
            android:drawableLeft="@drawable/ic_action_back"
            android:background="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/researchers" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewListResearchers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/buttonBackListByResearchers"
            android:padding="3dp"
            android:scrollbars="vertical"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>

</RelativeLayout>
