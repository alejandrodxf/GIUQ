<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/line_of_research"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="co.edu.uniquindio.android.electiva.giuq.fragments.LineOfResearchFragment">

        <TextView
            android:id="@+id/textViewLineOfResearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_edittext"
            android:layout_marginTop="20dp"
            android:text="@string/lines_of_research"
            />

        <ImageView
            android:id="@+id/imageViewAddLineOfResearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewRemoveLineOfResearch"
            android:layout_marginEnd="23dp"
            android:layout_toStartOf="@+id/imageViewRemoveLineOfResearch"
            app:srcCompat="@drawable/ic_action_add" />

        <ImageView
            android:id="@+id/imageViewRemoveLineOfResearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/recyclerViewLineOfResearch"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_action_remove" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewLineOfResearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/textViewLineOfResearch"
            android:padding="3dp"
            android:scrollbars="vertical" />


</RelativeLayout>
